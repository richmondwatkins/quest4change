extends ../shared/template

block content
  h2 Groups

  button#new-group Make Group

  #all-groups
  h1 All Groups
  each group in groups
    #group-show(data-id='#{group._id}')
    h4#group-name: a(href='/groups/#{group.name}/#{group._id}')= group.name
    form(action='/groups/#{group._id}/join', method='POST')
      button#join-group Join Group

  h1 Group's I Am A Member of

  each joinedGroup in user.groups
    h3= joinedGroup.name

  h1 User's Groups
  each userGroup in usersGroups
    h4= userGroup.name

